{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "api/auth.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/admin.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/teacher.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/student.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/payment.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/reports.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/packages.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/auth/(.*)",
      "destination": "/api/auth"
    },
    {
      "source": "/api/admin/(.*)",
      "destination": "/api/admin"
    },
    {
      "source": "/api/teacher/(.*)",
      "destination": "/api/teacher"
    },
    {
      "source": "/api/student/(.*)",
      "destination": "/api/student"
    },
    {
      "source": "/api/payment/(.*)",
      "destination": "/api/payment"
    },
    {
      "source": "/api/reports/(.*)",
      "destination": "/api/reports"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    },
    {
      "source": "/(.*)\\.(png|jpg|jpeg|gif|svg|ico|webp)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.(js|css)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}